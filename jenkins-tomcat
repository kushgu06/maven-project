pipeline
  {
  
    agent any
	  stages
	  
	    {
		    stage ('scm checkout')
			 {
			   steps
			   
			   {
			   
			       git branch: 'master', url: 'https://github.com/kushgu06/maven-project.git'
			   
			   }
			 
			 
			 
			 }
			 
			 stage ('sonar')
				{
				  steps 
				    {
					
					
                    withMaven(jdk: 'localjdk',maven : 'localmaven') {
                    sh 'mvn clean package '
					
					
					}
				
				}
				
				}
				
				
				
		
		
	         stage ('deploy to tomcat')
				{
				  steps 
				    {
					
					sshagent(['cicd']) {
                                                sh 'scp -o StrictHostKeyChecking=no  /var/lib/jenkins/workspace/*/webapp   ec2-user@3.120.130.12:/var/lib/tomcat/webapps'	
                                                                                 
				
				}
				
				}
				
				
				}
		     
		
		
		
		
		
		
		}
  
  
  }
  
  
  
  
  
  
  

